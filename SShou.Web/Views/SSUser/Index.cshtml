@using System.Threading
@using System.Web.Optimization
@using Abp.Timing
@using Abp.Web.Mvc.Extensions
@{
    ViewBag.ActiveMenu = "Home"; //The menu item will be active for this page.
}

<div>
    <h1>收货人</h1>
    <div class="row">
        <!-- 过滤框 -->
        <div class="panel panel-default">
            <div class="panel-heading">查询条件</div>
            <div class="panel-body">
                <form id="formSearch" class="form-horizontal">
                    <div class="form-group" style="margin-top: 15px">
                        @*<label class="control-label col-sm-1" for="txt-filter">任务名称</label>
                            <div class="col-sm-3">
                                <input type="text" class="form-control" id="txt-filter">
                            </div>*@
                        @*<label class="control-label col-sm-1" for="txt-filter">日期</label>
                            <div class="col-sm-3">
                                <input type="text" class="datepicker" placeholder="请选择日期" />
                                @*<span class="input-group-addon">到</span>
                                <input name="dtEnd" class="form-control" style="font-size: 13px;" type="text" value="">
                            </div>*@

                        <label class="control-label col-sm-1" for="txt-search-status">状态</label>
                        <div class="col-sm-3">
                            <select id="Status" class="form-control">
                                <option value="0">未审核</option>
                                <option value="1">已通过</option>
                                <option value="-1">未通过</option>
                                <option value="2">已禁用</option>
                            </select>
                        </div>
                        <div class="col-sm-4" style="text-align: left;">
                            <button type="button" style="margin-left: 50px" id="btn-query" class="btn btn-primary">查询</button>
                        </div>
                       
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <table class="table" id="orderList">
            <thead>
                <tr>
                    <th>姓名</th>
                    <th>号码</th>
                    <th>地址</th>

                </tr>
            </thead>
            <tbody id="orderList"></tbody>
        </table>
    </div>
</div>
</div>
<div class="modal fade" id="OrderAssign" tabindex="-1" role="dialog" aria-labelledby="OrderAssign" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form name="userCreateForm" role="form" novalidate class="form-validation">
                <div class="modal-header">
                    <h4 class="modal-title">
                        <span>审核</span>
                    </h4>
                </div>
                <div class="modal-body">

                    <div class="control-group">

                        <!-- Search input-->
                        <label class="control-label">姓名</label>
                        <div class="controls">
                            <span id="name">无</span>
                        </div>

                        <label class="control-label">从业时长</label>
                        <div class="controls">
                            <span id="time">无</span>
                        </div>

                        <label class="control-label">手机号</label>
                        <div class="controls">
                            <span id="phone">无</span>
                        </div>

                        <label class="control-label">微信号</label>
                        <div class="controls">
                            <span id="wechat">无</span>
                        </div>
                        <label class="control-label">身份证</label>
                        <div class="controls">
                            <span id="card">无</span>
                        </div>

                        <label class="control-label">回收区域</label>
                        <div class="controls">
                            <span id="area">无</span>
                        </div>

                        <label class="control-label">回收品类</label>
                        <div class="controls">
                            <span id="prod">无</span>
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="unPass">不通过</button>
                    <button type="button" class="btn btn-primary blue"  id="pass"><i class="fa fa-save"></i> <span>通过</span></button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="OrderDetail" tabindex="-1" role="dialog" aria-labelledby="OrderDetail" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form name="userCreateForm" role="form" novalidate class="form-validation">
                <div class="control-group">

                    <!-- Search input-->
                    <label class="control-label">姓名</label>
                    <div class="controls">
                        <span id="d_name">无</span>
                    </div>

                    <label class="control-label">从业时长</label>
                    <div class="controls">
                        <span id="d_time">无</span>
                    </div>

                    <label class="control-label">手机号</label>
                    <div class="controls">
                        <span id="d_phone">无</span>
                    </div>

                    <label class="control-label">微信号</label>
                    <div class="controls">
                        <span id="d_wechat">无</span>
                    </div>
                    <label class="control-label">身份证</label>
                    <div class="controls">
                        <span id="d_card">无</span>
                    </div>

                    <label class="control-label">回收区域</label>
                    <div class="controls">
                        <span id="d_area">无</span>
                    </div>

                    <label class="control-label">回收品类</label>
                    <div class="controls">
                        <span id="d_prod">无</span>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>

                </div>
            </form>
        </div>
    </div>
    <script src="~/Scripts/jquery-2.2.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/bootstrap-table/bootstrap-table.min.js"></script>
    <link href="~/Content/bootstrap-table/bootstrap-table.css" rel="stylesheet" />
    <script src="~/Content/bootstrap-table/locale/bootstrap-table-zh-CN.js"></script>
    <script src="~/Views/SSUser/Index.js"></script>
</div>